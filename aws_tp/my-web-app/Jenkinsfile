pipeline {
    agent any

    environment {
        IMAGE_NAME = 'my-web-img'
        CONTAINER_NAME = "test-container-${env.BUILD_ID}"
    }

    stages {
        stage('ğŸ“¥ Cloner le repo') {
            steps {
                echo 'ğŸ“¥ Clonage du dÃ©pÃ´t'
                git branch: 'main', url: 'https://github.com/AnasIchmawin/Mini_projet_Docker'
            }
        }

        stage('ğŸ§¹ Nettoyer les anciens conteneurs') {
            steps {
                echo 'ğŸ§¹ Nettoyage des anciens conteneurs Docker'
                sh '''
                    docker rm -f $(docker ps -aq --filter "ancestor=${IMAGE_NAME}") || true
                '''
            }
        }

        stage('âš™ï¸ Build') {
            steps {
                echo 'âš™ï¸ Construction de l\'image Docker'
                sh "docker build -t ${IMAGE_NAME} ./aws_tp/my-web-app"
            }
        }

        stage('âœ… Test') {
            steps {
                echo 'âœ… Tests de l\'application'
                sh "docker run --name ${CONTAINER_NAME} -d ${IMAGE_NAME}"
                // ğŸ‘‰ Tu peux ajouter ici tes tests automatisÃ©s
            }
        }

        stage('ğŸš€ Release') {
            steps {
                echo 'ğŸš€ Publication de l\'image (optionnel)'
                // Exemple : docker tag / docker push
            }
        }

        stage('ğŸ“¦ Deploy in Review') {
            steps {
                echo 'ğŸ“¦ DÃ©ploiement en environnement de revue'
                // Exemple : docker-compose up -d ou docker run ...
            }
        }
    }

    post {
        always {
            echo 'ğŸ§½ Nettoyage post-pipeline'
            sh "docker rm -f ${CONTAINER_NAME} || true"
            sh '''
                docker ps -q --filter ancestor=${IMAGE_NAME} | xargs -r docker stop
                docker ps -q --filter ancestor=${IMAGE_NAME} | xargs -r docker rm
            '''
        }

        failure {
            echo 'âŒ Pipeline Ã©chouÃ©. VÃ©rifiez les logs.'
        }

        success {
            echo 'âœ… Pipeline terminÃ© avec succÃ¨s.'
        }
    }
}
