pipeline {
    agent any
    
    environment {
        // Utiliser la méthode correcte pour les identifiants
        DOCKER_CREDENTIALS = credentials('docker-hub-credentials')
        IMAGE_NAME = "mini-projet-docker"
        IMAGE_TAG = "${env.BUILD_NUMBER}"
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Récupérer le code depuis GitHub
                echo "Clonage du dépôt Git..."
                checkout scm
            }
        }
        
        stage('Build Docker Image') {
            steps {
                // Se déplacer dans le répertoire où se trouve le Dockerfile
                dir('aws_tp/my-web-app') {
                    echo "Construction de l'image Docker..."
                    sh "docker build -t ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:${IMAGE_TAG} ."
                    sh "docker tag ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:${IMAGE_TAG} ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:latest"
                }
            }
        }
        
        stage('Test Application') {
            steps {
                echo "Test de l'application..."
                
                // Lancer un conteneur temporaire pour tester
                sh "docker run -d --name test-container -p 8080:80 ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
                
                // Attendre que le conteneur démarre
                sh "sleep 5"
                
                // Test simple : vérifier si le serveur est actif
                sh "curl -s http://localhost:8080 | grep 'Mini Projet Docker'"
                
                // Nettoyage après le test
                sh "docker stop test-container"
                sh "docker rm test-container"
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                echo "Publication de l'image sur Docker Hub..."
                
                // Connexion à Docker Hub avec les identifiants
                sh 'echo $DOCKER_CREDENTIALS_PSW | docker login -u $DOCKER_CREDENTIALS_USR --password-stdin'
                
                // Pousser l'image
                sh "docker push ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
                sh "docker push ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:latest"
                
                // Déconnexion de Docker Hub
                sh "docker logout"
            }
        }
        
        stage('Clean Up') {
            steps {
                echo "Nettoyage des ressources locales..."
                
                // Supprimer les images locales
                sh "docker rmi ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:${IMAGE_TAG}"
                sh "docker rmi ${DOCKER_CREDENTIALS_USR}/${IMAGE_NAME}:latest"
            }
        }
    }
    
    post {
        success {
            echo "Pipeline exécuté avec succès! L'image a été construite et publiée sur Docker Hub."
        }
        failure {
            echo "Échec de l'exécution du pipeline. Vérifiez les logs pour plus de détails."
        }
    }
}