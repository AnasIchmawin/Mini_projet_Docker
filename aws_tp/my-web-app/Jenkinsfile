pipeline {
    agent any
    stages {
        stage('Clonage du Dépôt') {
            steps {
                echo "📂 Clonage du dépôt GitHub..."
                git 'https://github.com/AnasIchmawin/Mini_projet_Docker.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo "🔧 Construction de l'image Docker..."
                sh 'docker build -t docker.io/fatihmedamine/simple-jenkins-app:latest -f my-web-app/Dockerfile my-web-app'
            }
        }
        stage('Test Docker') {
            steps {
                echo "🚀 Test de l'image Docker..."
                sh 'docker run -d -p 8080:80 docker.io/fatihmedamine/simple-jenkins-app:latest'
            }
        }
        stage('Push Docker Image') {
            steps {
                echo "📤 Push de l'image Docker..."
                sh 'docker push docker.io/fatihmedamine/simple-jenkins-app:latest'
            }
        }
    }
    post {
        always {
            echo "🧹 Nettoyage de l'environnement..."
            sh 'docker system prune -f'
        }
        failure {
            echo "❌ Échec du pipeline !"
        }
        success {
            echo "✅ Pipeline réussi !"
        }
    }
}
